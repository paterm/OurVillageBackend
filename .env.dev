# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/our_village?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production-development-only"
JWT_REFRESH_SECRET="your-refresh-secret-key-change-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Application
NODE_ENV="development"
PORT=3000
CLIENT_URL="http://localhost:3001"

